# Modified from http://gunicorn.org/deploy.html

upstream mr_deploy {
    server unix:/tmp/gunicorn.sock fail_timeout=0;
}

server {
    listen 80 default;
    server_name ci.khanacademy.org;

    # path for static files
    root /home/ci/gae-continuous-deploy/static;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_buffering off;

        if (!-f $request_filename) {
            proxy_pass http://mr_deploy;
            break;
        }
    }
}
