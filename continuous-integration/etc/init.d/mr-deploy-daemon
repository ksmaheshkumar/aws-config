# A crummy daemonizer based on dashboards-daemon with modifications

NAME=mr-deploy-daemon
PIDFILE=/var/run/$NAME.pid
DESC="Khan Academy Mr Deploy, Mr. Assistant, and web server daemon"
LOGFILE=/home/ci/gae-continuous-deploy/log/prod_server.log
DAEMON=/home/ci/gae-continuous-deploy/prod_server.sh

test -x $DAEMON || exit 0

[ -r /etc/default/mr-deploy-daemon ] && . /etc/default/mr-deploy-daemon

. /lib/lsb/init-functions

start_mr_deploy() {
  mkdir -p $(dirname $LOGFILE)
  # Make sure we run as the ci user
  sudo -iu ci nohup $DAEMON > $LOGFILE &
  echo $! > $PIDFILE
}

stop_mr_deploy() {
  [ -f $PIDFILE ] && ( kill `cat $PIDFILE` 2> /dev/null )
  rm -f $PIDFILE 2> /dev/null
}

case "$1" in
  start)
  log_begin_msg "Starting $DESC"
  start_mr_deploy
  log_end_msg 0
  ;;
  stop)
  log_begin_msg "Stopping $DESC"
  stop_mr_deploy
  log_end_msg 0
  ;;
  restart|force-reload)
  log_begin_msg "Restarting $DESC"
  stop_mr_deploy
  sleep 2
  start_mr_deploy
  log_end_msg 0
  ;;
  *)
  echo "Usage: $0 {start|stop|restart|force-reload}" >&2
  exit 1
  ;;
esac

exit 0

