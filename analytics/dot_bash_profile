# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

set -o vi

export HISTFILESIZE=2000
# show timestamps with history command
export HISTTIMEFORMAT="%F %T "


# User specific environment and startup programs
export KA_DATA_DIR=$HOME/kadata/daily/csv
export PATH=$PATH:$HOME/bin:/usr/local/google_appengine

# TODO(benkomalo): investigate if any of this is still necessary
# We should hopefully not have to patch up PYTHONPATH like this.
export ANALYTICS_SRC_DIR=$HOME/analytics
export PYTHONPATH=$ANALYTICS_SRC_DIR/src:$ANALYTICS_SRC_DIR/src/fetch-entities:/usr/local/google_appengine

