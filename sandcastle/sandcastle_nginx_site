server {
    listen 80;
    server_name sandcastle.khanacademy.org;
    autoindex on;

    location / {
        proxy_pass http://127.0.0.1:8080;
        include /etc/nginx/proxy_params;
    }

    location ~ ^/(robots\.txt|favicon\.ico).*$ {
        return 404;
    }

    location /media/ {
        root /home/sandcastle/sandcastle/;
        expires epoch;
    }
}
